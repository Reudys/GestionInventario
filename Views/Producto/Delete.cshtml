@model GestionInventario.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg" style="max-width: 500px; width: 100%;">
        <div class="card-body p-4">
            <h3 class="card-title text-center text-danger mb-3">¿Estás seguro que deseas eliminar este producto?</h3>
            <hr />

            <dl class="row">
                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Model.Nombre</dd>

                <dt class="col-sm-4">Descripción</dt>
                <dd class="col-sm-8">@Model.Descripcion</dd>

                <dt class="col-sm-4">Precio</dt>
                <dd class="col-sm-8">@Model.Precio.ToString("C")</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
