@model GestionInventario.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg" style="max-width: 400px; width: 100%;">
        <div class="card-body p-4">
            <h2 class="card-title text-center mb-4">Iniciar Sesión</h2>
            <form asp-controller="User" asp-action="Login" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger mt-3">@ViewData["ErrorMessage"]</div>
                }
                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                    <a asp-action="Register" class="btn btn-secondary">Registrarse</a>
                </div>
            </form>
        </div>
    </div>
</div>
